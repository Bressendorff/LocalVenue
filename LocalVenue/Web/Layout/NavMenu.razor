@using LocalVenue.Web.Models
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Identity
@inject UserManager<Core.Entities.Customer> UserManager
@inject AuthenticationStateProvider AuthenticationStateProvider

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">LocalVenue</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler"/>

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        @foreach(var item in MenuItems ?? [])
        {
            if (item.Visible)
            {
                <div class="nav-item px-3">
                    <NavLink class="nav-link ps-2" href="@item.Link" Match="NavLinkMatch.All">
                        <i style="font-size: 16px" class="d-flex align-items-center bi @item.Icon"></i> @item.Name
                    </NavLink>
                </div>
            }
        }
    </nav>
</div>

@code {

    [Parameter]
    public List<MenuItem>? MenuItems { get; set; }
    

    

}